<Window x:Class="ImageEditor.selectingEffect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        mc:Ignorable="d"
        Title="selectingEffect" Height="450" Width="1000" Icon="./resources/image.ico" WindowStartupLocation="CenterScreen">
    <Grid Margin="29,22,28,9">
        <Image Name="OriginalImage" HorizontalAlignment="Left" Height="360" Margin="-15,-5,0,0" VerticalAlignment="Top" Width="555"/>
        <Label Content="Selected image" HorizontalAlignment="Left" Height="45" Margin="0,360,0,-17" VerticalAlignment="Top" Width="99"/>
        <Button Content="Black-White" HorizontalAlignment="Left" Height="50" Margin="560,0,0,0" VerticalAlignment="Top" Width="157" Click="blackWhite_click"/>
        <Button Content="Sepia" HorizontalAlignment="Left" Height="50" Margin="560,65,0,0" VerticalAlignment="Top" Width="157" Click="sepia_Click"/>
        <Button Content="Negative" HorizontalAlignment="Left" Height="50" Margin="560,135,0,0" VerticalAlignment="Top" Width="157" Click="Negative_Click"/>
        <Button Content="Brightness" HorizontalAlignment="Left" Height="50" Margin="560,205,0,0" VerticalAlignment="Top" Width="157" Click="Brightness_Click"/>
        <Button Content="Color" HorizontalAlignment="Left" Height="50" Margin="560,280,0,0" VerticalAlignment="Top" Width="157" Click="Color_Click"/>
        <Button Content="Invert Colors" HorizontalAlignment="Left" Height="50" Margin="760,0,0,0" VerticalAlignment="Top" Width="157"/>



    </Grid>
</Window>
