<Window x:Class="ImageEditor.selectingEffect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        mc:Ignorable="d"
        Title="selectingEffect" Height="450" Width="800" Icon="./resources/image.ico" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,45,-8,9">
        <Image Name="OriginalImage" HorizontalAlignment="Left" Height="310" Margin="33,-25,0,0" VerticalAlignment="Top" Width="487"/>
        <Label Content="Selected image" HorizontalAlignment="Left" Height="45" Margin="33,310,0,0" VerticalAlignment="Top" Width="99"/>
        <Button Content="Black-White" HorizontalAlignment="Left" Height="50" Margin="610,0,0,0" VerticalAlignment="Top" Width="157" Click="blackWhite_click"/>
        <Button Content="Sepia" HorizontalAlignment="Left" Height="50" Margin="610,70,0,0" VerticalAlignment="Top" Width="157" Click="sepia_Click"/>
        <Button Content="Negative" HorizontalAlignment="Left" Height="50" Margin="610,140,0,0" VerticalAlignment="Top" Width="157" Click="Button_Click"/>


    </Grid>
</Window>
