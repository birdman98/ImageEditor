<Window x:Class="ImageEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        mc:Ignorable="d"
        Title="Image Editor" Height="300" Width="500" Icon="./resources/image.ico" Background="DarkGray" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,2">
        <Button x:Name="LoadImageButton" Content="Load Image" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" FontSize="20" FontFamily="Consolas" Click="LoadImageButton_Click" Margin="175,120,175,110" Height="40"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" FontSize ="24" Text="     Welcome in Image Editor,&#10; please select a file to work with." VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="43,10,40,0" Height="76" Width="358"/>
        <Button Content="Program info" HorizontalAlignment="Left" Margin="35,220,0,0" VerticalAlignment="Top" Width="75" Click="ProgramInfo_Click"/>

    </Grid>
</Window>
