<Window x:Class="ImageEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        mc:Ignorable="d"
        Title="Image Editor" Height="450" Width="800" Icon="./resources/image.ico" Background="DarkGray">
    <Grid>
        <Button x:Name="LoadImageButton" Content="Load Image" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" FontSize="20" FontFamily="Consolas" Click="LoadImageButton_Click"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="NoWrap" FontSize ="28" Text="Welcome in Image Editor, please select a file to work with." VerticalAlignment="Top"/>
        <Button x:Name="AuthorsInfo" Content="Display info about author" HorizontalAlignment="Left" Margin="580,375,0,0" VerticalAlignment="Top" Width="200" Click="AuthorsInfo_Click"/>

    </Grid>
</Window>
